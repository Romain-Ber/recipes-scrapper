<h1>show</h1>

<%= link_to 'Posts', posts_path, class: 'btn btn-primary' %>

<h2><%= @post.title %></h2>
<p><%= @post.content %></p>
<a href="<%= @post.url %>"><%= @post.url %></a>

<%= render "form", post: @post, user: @user %>

<% @comments.each do |comment| %>
  <%= render "card_comment", comment: comment %>
<% end %>
