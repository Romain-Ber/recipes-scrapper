<%= simple_form_for @post do |f| %>
  <div class="field">
    <%= f.label :url, "Enter the link to a valid bbcgoodfood recipe article" %>
    <%= f.input :url, placeholder: "https://www.bbcgoodfood.com/recipes/lighter-beef-stew-dumplings" %>
  </div>
  <%= f.button :submit, "Add Recipe Article", class: "btn btn-ghost" %>
<% end %>
